extends _layout.pug

block content
    .container
        .row.justify-content-md-center
            .col.col-ms-12.col-md-10.col-lg-8.col-xl-6
                .card.border-primary
                    .card-header ğŸ‘©ğŸ»â€ğŸ’» Create Message âœ¨
                    .card-body
                        form(method='post', action='/create/post')
                            .form-group
                                label(for='title') Title
                                input#title.form-control(type='text', placeholder='Type in your title', name='title')
                            .form-group
                                label(for='content') Message
                                textarea#content.form-control(placeholder='Type in your message', rows='3', name='content')
                            button.btn.btn-primary(type='submit') Post New Message
    each post in posts                        
        .row.justify-content-md-center
            .col.col-ms-12.col-md-10.col-lg-8.col-xl-6
                .card.border-primary
                    .card-body
                        h4.card-title= post.title
                        p.card-text= post.content
                        - var date = new Date(post.createdAt)
                        span.text-primary= `${date.getMonth() + 1}æœˆ${date.getDate()}æ—¥ ${('0' + date.getHours()).slice(-2)}:${date.getMinutes()}`
